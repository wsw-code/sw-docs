{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "src",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@runtime": ["./runtime/index.ts"],
      "shared/*": ["shared/*"]
    },
  },
  "include": ["e2e/**/*.ts", "src/**/*"],
}